@model RealStateManager.ViewModels.ViewModelRegister
@{
    Layout = null;
    ViewData["Title"] = "Resident Registration";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>New Resident</title>

    <environment include="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>

    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="~/css/site.min.css" rel="stylesheet" />
    </environment>
</head>
<body class="fullBody">

    <div class="registrationForm">
        <div class="center-align">
            <h4><i class="large material-icons">account_circle</i></h4>
            <h5>New Resident</h5>
        </div>
        <div>
            <form asp-action="Register" enctype="multipart/form-data">
                <div class="fields">
                    <div class="red-text text-darken-4" asp-validation-summary="ModelOnly"></div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input asp-for="Name" class="validate" id="Name" />
                            <label asp-for="Name" id="Name"></label>
                            <span asp-validation-for="Name" class="red-text text-darken-4"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input asp-for="Identification" class="validate" id="Identification" />
                            <label asp-for="Identification" id="Identification"></label>
                            <span asp-validation-for="Identification" class="red-text text-darken-4"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input asp-for="Phone" class="validate" id="Phone" />
                            <label asp-for="Phone" id="Phone"></label>
                            <span asp-validation-for="Phone" class="red-text text-darken-4"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="file-field input-field col s12">
                            <div class="btn-small">
                                <span>Select your Profile Picture</span>
                                <input asp-for="Picture" type="file" class="validate" id="picture" />
                            </div>

                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input asp-for="Email" class="validate" type="email" id="Email" />
                            <label asp-for="Email" id="Email"></label>
                            <span asp-validation-for="Email" class="red-text text-darken-4"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input asp-for="Password" class="validate" type="password" id="Password" />
                            <label asp-for="Password" id="Password"></label>
                            <span asp-validation-for="Password" class="red-text text-darken-4"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input asp-for="ConfirmedPassword" class="validate" type="password" id="ConfirmedPassword" />
                            <label asp-for="ConfirmedPassword" id="ConfirmedPassword"></label>
                            <span asp-validation-for="ConfirmedPassword" class="red-text text-darken-4"></span>
                        </div>
                    </div>
                </div>

                <div class="buttons">
                    <button type="submit" class="waves-effect waves-light btn-small green darken-4">Register</button> &emsp;
                    <a asp-controller="User" asp-action="Login">I already have an account</a>
                </div>               
            </form>
        </div>
    </div>

    <environment include="Development">
        <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.js"></script>
        <script src="~/js/StartMasks.js"></script>
    </environment>

    <environment exclude="Development">
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.min.js"></script>
        <script src="~/js/StartMasks.min.js"></script>
    </environment>
</body>
</html>
